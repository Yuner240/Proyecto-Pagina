@page
@model WebApplication110.Pages.registerModel
@{

    // Define la página de diseño que se usará para la página de registro
    Layout = "_Layout-register";

}

<!-- Contenedor principal para la página de registro -->
<div class="container">

    <!-- Tarjeta para el formulario de registro con sombra y borde redondeado -->
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Fila interna dentro del cuerpo de la tarjeta -->
            <div class="row">
                <!-- Lado izquierdo con imagen de fondo para pantallas grandes -->
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>

                <!-- Lado derecho con el formulario de registro -->
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <!-- Título principal del formulario -->
                            <h1 class="h4 text-gray-900 mb-4">¡Crea una cuenta!</h1>
                        </div>

                        <!-- Formulario de registro -->
                        <form class="user">
                            <!-- Campo para el primer nombre y el apellido -->
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="text" class="form-control form-control-user" id="exampleFirstName"
                                           placeholder="Primer Nombre">
                                </div>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control form-control-user" id="exampleLastName"
                                           placeholder="Apellido">
                                </div>
                            </div>
                            <!-- Campo para el correo electrónico -->
                            <div class="form-group">
                                <input type="email" class="form-control form-control-user" id="exampleInputEmail"
                                       placeholder="Dirección de Email">
                            </div>
                            <!-- Campos para la contraseña y la repetición de la contraseña -->
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="password" class="form-control form-control-user"
                                           id="exampleInputPassword" placeholder="Contraseña">
                                </div>
                                <div class="col-sm-6">
                                    <input type="password" class="form-control form-control-user"
                                           id="exampleRepeatPassword" placeholder="Repetir Contraseña">
                                </div>
                            </div>
                            <!-- Botón para registrar la cuenta -->
                            <a href="login.html" class="btn btn-primary btn-user btn-block">
                                Registrar Cuenta
                            </a>
                            <hr>
                            <!-- Botón para registrar con Google -->
                            <a href="index.html" class="btn btn-google btn-user btn-block">
                                <i class="fab fa-google fa-fw"></i> Registrar con Google
                            </a>
                            <!-- Botón para registrar con Facebook -->
                            <a href="index.html" class="btn btn-facebook btn-user btn-block">
                                <i class="fab fa-facebook-f fa-fw"></i> Registrar con Facebook
                            </a>
                        </form>

                        <hr>
                        <!-- Enlaces para recuperación de contraseña y login -->
                        <div class="text-center">
                            <a class="small" href="forgot-password.html">¿Olvidaste tu contraseña?</a>
                        </div>
                        <div class="text-center">
                            <a class="small" href="login.html">¿Ya tienes una cuenta? Inicia sesión.</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Archivos JavaScript principales de Bootstrap -->
<script src="vendor/jquery/jquery.min.js"></script>
<script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- JavaScript principal del plugin de animación de easing -->
<script src="vendor/jquery-easing/jquery.easing.min.js"></script>

<!-- Scripts personalizados para todas las páginas -->
<script src="js/sb-admin-2.min.js"></script>

