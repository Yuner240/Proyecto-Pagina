@page
@model WebApplication110.Pages.login2Model

@{
    // Define la página de diseño que se usará para la página de login
    Layout = "_Layout-login";
}

<!-- Contenedor principal de la página de login -->
<div class="container">

    <!-- Fila exterior para centrar el formulario de login -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">
            <!-- Tarjeta para el formulario de login con efecto de sombra -->
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Fila interna dentro del cuerpo de la tarjeta -->
                    <div class="row">
                        <!-- Lado izquierdo con imagen de fondo para pantallas grandes -->
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>

                        <!-- Lado derecho con el formulario -->
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <!-- Mensaje de bienvenida -->
                                    <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                </div>

                                <!-- Formulario de login -->
                                <form class="user">
                                    <!-- Campo de entrada para el correo electrónico -->
                                    <div class="form-group">
                                        <input type="email" class="form-control form-control-user"
                                               id="exampleInputEmail" aria-describedby="emailHelp"
                                               placeholder="Enter Email Address...">
                                    </div>
                                    <!-- Campo de entrada para la contraseña -->
                                    <div class="form-group">
                                        <input type="password" class="form-control form-control-user"
                                               id="exampleInputPassword" placeholder="Password">
                                    </div>
                                    <!-- Casilla de verificación para "Recordarme" -->
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox small">
                                            <input type="checkbox" class="custom-control-input" id="customCheck">
                                            <label class="custom-control-label" for="customCheck">
                                                Remember Me
                                            </label>
                                        </div>
                                    </div>
                                    <!-- Botón para hacer login -->
                                    <a href="index.html" class="btn btn-primary btn-user btn-block">
                                        Login
                                    </a>
                                    <hr>
                                    <!-- Botón para login con Google -->
                                    <a href="index.html" class="btn btn-google btn-user btn-block">
                                        <i class="fab fa-google fa-fw"></i> Login with Google
                                    </a>
                                    <!-- Botón para login con Facebook -->
                                    <a href="index.html" class="btn btn-facebook btn-user btn-block">
                                        <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook
                                    </a>
                                </form>

                                <hr>
                                <!-- Enlaces para recuperación de contraseña y creación de cuenta -->
                                <div class="text-center">
                                    <a class="small" href="forgot-password.html">Forgot Password?</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" href="register.html">Create an Account!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

<!-- Archivos JavaScript principales de Bootstrap -->
<script src="vendor/jquery/jquery.min.js"></script>
<script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- JavaScript principal del plugin de animación de easing -->
<script src="vendor/jquery-easing/jquery.easing.min.js"></script>

<!-- Scripts personalizados para todas las páginas -->
<script src="js/sb-admin-2.min.js"></script>
}

